# Make correlation matrix of transformed variables
corr_matrix = df_transformed[transformed_vars].corr()

print("\nCorrelation Matrix (log-transformed variables):")
display(corr_matrix.round(3))  # Round to 3 digits

# Display correlation matrix
fig, ax = plt.subplots(figsize=(10, 8))
sns.heatmap(corr_matrix, annot=True, cmap='coolwarm', center=0,
            fmt='.2f', square=True, linewidths=0.5, cbar_kws={'shrink': 0.8})
ax.set_title('Correlation Matrix of Transformed Variables', fontsize=14, fontweight='bold')
plt.xticks(rotation=45, ha='right')
plt.yticks(rotation=0)
plt.tight_layout()
plt.show()
